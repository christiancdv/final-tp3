<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashFragment">

    <!-- Auto layout, variables, and unit scale are not yet supported -->

    <RelativeLayout
        android:id="@+id/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/group_food" />

        <TextView
            android:id="@+id/a_comer_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|top"
            android:text="@string/a_comer_"
            android:textAppearance="@style/a_comer_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tus_comidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_comer_"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|top"
            android:text="@string/tus_comidas"
            android:textAppearance="@style/tus_comidas" />

        <Button
            android:id="@+id/pedir_ahora"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignTop="@id/tus_comidas"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/poppins_medium"
            android:hapticFeedbackEnabled="false"
            android:includeFontPadding="false"
            android:paddingVertical="10dp"
            android:text="@string/pedir_ahora"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="16sp" />
    </RelativeLayout>
</FrameLayout>