<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listado.OrderFragment" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restaurant"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="0"
            android:background="@drawable/restaurant"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:src="@drawable/back" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-50dp"
            android:layout_weight="0"
            android:backgroundTint="#FCFEFF"
            android:paddingRight="20dp"
            app:cardBackgroundColor="#29AAEB"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="588dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingHorizontal="50dp">

                    <TextView
                        android:id="@+id/resto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pizzeria La Farola"
                        android:textAlignment="gravity"
                        android:textColor="#3D3D3D"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="7dp"
                        android:src="@drawable/heart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">

                    <ImageView
                        android:id="@+id/address"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/pin" />

                    <TextView
                        android:id="@+id/resto2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Av. Francisco Beiró 5201"
                        android:textAlignment="gravity"
                        android:textColor="#3D3D3D"
                        android:textSize="19dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">

                    <ImageView
                        android:id="@+id/address2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/resto22"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30 Minutos - Tiempo entrega"
                        android:textAlignment="gravity"
                        android:textColor="#3D3D3D"
                        android:textSize="19dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/menus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Menús"
                    android:textColor="#3D3D3D"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/menuslist"
                    android:layout_width="match_parent"
                    android:layout_height="391dp"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:background="#FF1919"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="174dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/nachos" />

                            <LinearLayout
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical"
                                android:paddingTop="40dp">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Cheese Nachos"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="$3.00"
                                    android:textColor="#6E6D6D"
                                    android:textSize="18dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:src="@drawable/more" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:background="#FF1919"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView876"
                                android:layout_width="174dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/burrito" />

                            <LinearLayout
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical"
                                android:paddingTop="40dp">

                                <TextView
                                    android:id="@+id/textView476"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Veggie Burrito"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="$8.00"
                                    android:textColor="#6E6D6D"
                                    android:textSize="18dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageView76"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/selected" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
