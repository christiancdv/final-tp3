<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.parcial.ui.listado.ListadoFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_listado">
        <action
            android:id="@+id/action_exploreFragment_to_boracayFragment"
            app:destination="@id/boracayFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.parcial.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.parcial.ui.main.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/boracayFragment"
        android:name="com.example.parcial.ui.listado.OrderFragment"
        android:label="fragment_borocay"
        tools:layout="@layout/fragment_order" />
</navigation>